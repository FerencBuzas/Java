{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "../node_modules/@types/"
    ]
  },
  "compileOnSave": true,
  // "compileOnSave": false,   // for Karma tests, suggested on the net
  // "buildOnSave": false,     // for Karma tests, suggested on the net
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ]
}
